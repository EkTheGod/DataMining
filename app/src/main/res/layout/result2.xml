<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="คำทำนายของคุณ"
        android:id="@+id/text1"
        android:layout_gravity="center_horizontal"
        android:textSize="30dp"
        android:textColor="#010001"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="คือ"
        android:id="@+id/text2"
        android:layout_gravity="center_horizontal"
        android:textSize="30dp"
        android:textColor="#010001" />

    <ImageView
        android:layout_width="270dp"
        android:layout_height="280dp"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/home1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="หอ"
        android:id="@+id/text3"
        android:layout_gravity="center_horizontal"
        android:textSize="50dp"
        android:textColor="#010101" />

    <RelativeLayout
        android:layout_width="196dp"
        android:layout_height="59dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="จากพฤติกรรมของคุณ"
            android:id="@+id/text4"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp"
            android:textColor="#3c3f41" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="เหมาะสำหรับอยู่หอค่ะ"
            android:id="@+id/text5"
            android:layout_below="@+id/text4"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp"
            android:layout_alignParentBottom="true"
            android:textColor="#3c3f41"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp">

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/retry"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/retry"
            android:layout_marginRight="90dp" />

        <Button
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/home"
            android:layout_alignBottom="@+id/retry"
            android:layout_toEndOf="@+id/retry"
            android:background="@drawable/home"
            android:layout_marginLeft="90dp" />
    </RelativeLayout>
</LinearLayout>