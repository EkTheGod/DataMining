<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="แบบสอบถาม"
            android:id="@+id/textView0"
            android:layout_marginTop="20dp"
            android:textSize="40dp"
            android:layout_marginLeft="10dp"
            android:textColor="#010101"
            android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="1.เป็นนักศึกษาชั้นปีที่"
        android:id="@+id/textView1"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textView0"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:textColor="#010101" />

    <RadioGroup
        android:id="@+id/radio1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp">

        <RadioButton
            android:id="@+id/radio_year1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:onClick="onRadioButtonClicked"
            android:textColor="#010101" />
        <RadioButton
            android:id="@+id/radio_year2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:onClick="onRadioButtonClicked"
            android:layout_marginLeft="20dp"
            android:textColor="#010101" />
        <RadioButton
            android:id="@+id/radio_year3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:onClick="onRadioButtonClicked"
            android:layout_marginLeft="20dp"
            android:textColor="#010101" />
        <RadioButton
            android:id="@+id/radio_year4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:onClick="onRadioButtonClicked"
            android:layout_marginLeft="20dp"
            android:textColor="#010101" />
    </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="2.เพศ"
            android:id="@+id/textView2"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:textColor="#010101" />

        <RadioGroup
            android:id="@+id/radio2"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">

        <RadioButton
            android:id="@+id/male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:onClick="onRadioButtonClicked"
            android:textColor="#010101" />
        <RadioButton
            android:id="@+id/female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:onClick="onRadioButtonClicked"
            android:layout_marginLeft="20dp"
            android:textColor="#010101" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="3.คุณเป็นบุตรคนที่เท่าไหร่ของครอบครัว"
            android:id="@+id/textView3"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:textColor="#010101" />

        <RadioGroup
            android:id="@+id/radio3"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:weightSum="1">

            <RadioButton
                android:id="@+id/radio31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:onClick="onRadioButtonClicked"
                android:textColor="#010101" />
            <RadioButton
                android:id="@+id/radio32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:onClick="onRadioButtonClicked"
                android:layout_marginLeft="20dp"
                android:textColor="#010101" />
            <RadioButton
                android:id="@+id/radio33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:onClick="onRadioButtonClicked"
                android:layout_marginLeft="20dp"
                android:textColor="#010101" />
            <RadioButton
                android:id="@+id/radio34"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="อื่นๆ"
                android:onClick="onRadioButtonClicked"
                android:layout_marginLeft="20dp"
                android:textColor="#010101" />

            <EditText
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:inputType="numberSigned"
                android:text=""
                android:ems="10"
                android:id="@+id/editText34"
                android:layout_weight="0.46" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="4.จำนวนวันที่เรียนใน 1 สัปดาห์"
            android:id="@+id/textView4"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:textColor="#010101" />


        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner4" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="5.ที่อยู่ปัจจุบัน"
            android:id="@+id/textView5"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:textColor="#010101" />

        <RadioGroup
            android:id="@+id/radio5"
            android:layout_below="@+id/textView5"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">

            <RadioButton
                android:id="@+id/krung"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="กรุงเทพ"
                android:onClick="onRadioButtonClicked"
                android:textColor="#010101" />
            <RadioButton
                android:id="@+id/around"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ปรมณฑล"
                android:onClick="onRadioButtonClicked"
                android:layout_marginLeft="20dp"
                android:textColor="#010101" />
            <RadioButton
                android:id="@+id/other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ต่างจังหวัด"
                android:onClick="onRadioButtonClicked"
                android:layout_marginLeft="20dp"
                android:textColor="#010101" />
        </RadioGroup>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="6.รายได้เฉลี่ยต่อเดือนี่"
        android:id="@+id/textView6"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:textColor="#010101" />

        <RadioGroup
            android:id="@+id/radio6"
            android:layout_below="@+id/textView6"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <RadioButton
                android:id="@+id/radio61"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="น้อยกว่า 3,000 บาท"
                android:onClick="onRadioButtonClicked"
                android:textColor="#010101" />
            <RadioButton
                android:id="@+id/radio62"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3,000 - 6,000 บาท"
                android:onClick="onRadioButtonClicked"
                android:textColor="#010101" />
            <RadioButton
                android:id="@+id/radio63"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6,001 - 9,000 บาท"
                android:onClick="onRadioButtonClicked"
                android:textColor="#010101" />
            <RadioButton
                android:id="@+id/radio64"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="มากกว่า 9,000 บาท"
                android:onClick="onRadioButtonClicked"
                android:textColor="#010101" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="7.ระยะเวลาในการเดินทางไป-กลับบ้าน/ครั้ง"
            android:id="@+id/textView7"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:textColor="#010101" />

        <RadioGroup
            android:id="@+id/radio7"
            android:layout_below="@+id/textView7"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <RadioButton
                android:id="@+id/radio71"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="น้อยกว่า  30 นาที"
                android:onClick="onRadioButtonClicked"
                android:textColor="#010101" />
            <RadioButton
                android:id="@+id/radio72"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30 - 60 นาที"
                android:onClick="onRadioButtonClicked"
                android:textColor="#010101" />
            <RadioButton
                android:id="@+id/radio73"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 ชั่วโมง - 1 ชั่วโมงครึ่ง"
                android:onClick="onRadioButtonClicked"
                android:textColor="#010101" />
            <RadioButton
                android:id="@+id/radio74"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 ชั่วโมงครึ่ง - 2 ชั่วโมง"
                android:onClick="onRadioButtonClicked"
                android:textColor="#010101" />
            <RadioButton
                android:id="@+id/radio75"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 ชั่วโมงครึ่ง - 3 ชั่วโมง"
                android:onClick="onRadioButtonClicked"
                android:textColor="#010101" />
            <RadioButton
                android:id="@+id/radio76"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="มากกว่า 3 ชั่วโมง"
                android:onClick="onRadioButtonClicked"
                android:textColor="#010101" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="8.ค่าใช้จ่ายในการเดินทางไป-กลับบ้าน/ครั้ง"
            android:id="@+id/textView8"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:textColor="#010101" />
        <RadioGroup
            android:id="@+id/radio8"
            android:layout_below="@+id/textView8"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <RadioButton
                android:id="@+id/radio81"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="น้อยกว่า 50 บาท"
                android:onClick="onRadioButtonClicked"
                android:textColor="#010101" />
            <RadioButton
                android:id="@+id/radio82"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="51 - 100 บาท"
                android:onClick="onRadioButtonClicked"
                android:textColor="#010101" />
            <RadioButton
                android:id="@+id/radio83"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="101 - 150 บาท"
                android:onClick="onRadioButtonClicked"
                android:textColor="#010101" />
            <RadioButton
                android:id="@+id/radio84"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="151 - 200 บาท"
                android:onClick="onRadioButtonClicked"
                android:textColor="#010101" />
            <RadioButton
                android:id="@+id/radio85"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="201 - 250 บาท"
                android:onClick="onRadioButtonClicked"
                android:textColor="#010101" />
            <RadioButton
                android:id="@+id/radio86"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="251 - 300 บาท"
                android:onClick="onRadioButtonClicked"
                android:textColor="#010101" />
            <RadioButton
                android:id="@+id/radio87"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="มากกว่า 300 บาท"
                android:onClick="onRadioButtonClicked"
                android:textColor="#010101" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="9.คุณใช้ยานพาหนะเดินทางมาเรียนหรือไม่"
            android:id="@+id/textView9"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:textColor="#010101" />

        <RadioGroup
            android:id="@+id/radio9"
            android:layout_below="@+id/textView9"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp">

            <RadioButton
                android:id="@+id/radio91"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ใช้"
                android:onClick="onRadioButtonClicked"
                android:textColor="#010101" />
            <RadioButton
                android:id="@+id/radio92"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ไม่ใช้"
                android:onClick="onRadioButtonClicked"
                android:layout_marginLeft="20dp"
                android:textColor="#010101" />
        </RadioGroup>

        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show"
        android:id="@+id/show"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:id="@+id/reset"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</ScrollView>